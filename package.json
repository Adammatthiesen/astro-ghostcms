{
	"name": "root",
	"private": true,
	"packageManager": "pnpm@8.14.1",
	"engines": {
		"node": ">=18.19.0"
	},
	"scripts": {
		"dev": "pnpm --filter playground dev",
		"lint": "biome check .",
		"lint:fix": "biome check --apply .",
		"ci:version": "pnpm changeset version",
