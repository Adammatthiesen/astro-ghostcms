		"test:api:coverage": "pnpm --filter astro-ghostcms test:coverage",
		"test:create": "pnpm --filter create-astro-ghostcms test"
	},
	"devDependencies": {
		"@biomejs/biome": "1.5.3",
		"@changesets/cli": "^2.27.1",
